# Caddyfile configuration for TOEIC Simulation
# Place this in your Caddyfile or add to your existing Caddyfile

# Replace with your actual domain
toeic.example.com {
    # Reverse proxy to the Docker container
    reverse_proxy toeic-simulation:8080 {
        # Health check
        health_uri /health
        health_interval 30s
        health_timeout 5s
        
        # Headers
        header_up X-Real-IP {remote_host}
        header_up X-Forwarded-For {remote_host}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip zstd
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Logging (optional)
    log {
        output file /var/log/caddy/toeic.log
        format json
    }
}

# Alternative: If running on a subpath
# example.com/toeic {
#     reverse_proxy /toeic/* toeic-simulation:8080 {
#         rewrite /toeic /strip_prefix=/toeic
#     }
# }

# Alternative: If using IP address (not recommended for production)
# :8080 {
#     reverse_proxy toeic-simulation:8080
# }

